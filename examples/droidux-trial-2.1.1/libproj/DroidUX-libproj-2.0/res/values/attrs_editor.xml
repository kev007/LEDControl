<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- NoteViews-->
	<declare-styleable name="NoteView">
		<attr name="dux_drawLine" format="boolean" />
		<attr name="dux_paperColor" format="color" />
		<attr name="dux_lineColor" format="color" />
		<attr name="dux_marginColor" format="color"  />
		<attr name="dux_drawMargin" format="boolean" />
		<attr name="dux_marginWidth" format="dimension" />
		<attr name="dux_paperColorType">
			<enum name="solid" value="0" />
			<enum name="gradient" value="1" />
		</attr>
        <attr name="dux_marginType">
            <enum name="edge" value="0" />
            <enum name="line" value="1" />
            <enum name="doubleLine" value="2" />
        </attr>
	</declare-styleable>
	<declare-styleable name="NoteView.Editor" />
	<declare-styleable name="NoteView.Editor.MultiAutoComplete" />

	<!-- BubbleTextView -->
	<declare-styleable name="BubbleTextView">
		<attr name="dux_drawBubble" format="boolean" />
		<attr name="dux_bubbleColor" format="color" />
		<attr name="dux_bubbleDrawable" format="reference" />
	</declare-styleable>
</resources>
