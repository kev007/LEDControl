<resources xmlns:android="http://schemas.android.com/apk/res/android" >

	<!-- ScrollableTab styles -->
	<style name="DroidUX.ScrollableTab" />
	<style name="DroidUX.ScrollableTab.Arrow" >
		<item name="android:layout_width">@dimen/dux_scrltb_arw_width</item>
		<item name="android:layout_height">@dimen/dux_scrltb_height</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:layout_weight">1</item>
		<item name="android:background">@drawable/dux_scrltb_indctr_bg</item>
		<item name="android:scaleType">centerInside</item>
	</style>
	<style name="DroidUX.ScrollableTab.Arrow.Left">
		<item name="android:layout_marginLeft">-5dip</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:src">@drawable/dux_scrltb_lft_arw</item>
	</style>
	<style name="DroidUX.ScrollableTab.Arrow.Right">
		<item name="android:layout_marginRight">-5dip</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:src">@drawable/dux_scrltb_rght_arw</item>
	</style>
	<style name="DroidUX.ScrollableTab.Indicator">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">@dimen/dux_scrltb_height</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_marginLeft">-1dip</item>
		<item name="android:layout_marginRight">-1dip</item>
		<item name="android:minWidth">@dimen/dux_scrltb_indctr_minWidth</item>
		<item name="android:background">@drawable/dux_scrltb_indctr_bg</item>
	</style>
	<style name="DroidUX.ScrollableTab.IndicatorIcon">
		<item name="android:id">@id/dux_icon</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_above">@id/dux_title</item>
	</style>
	<style name="DroidUX.ScrollableTab.IndicatorTitle">
		<item name="android:id">@id/dux_title</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:textColor">@color/dux_scrltb_indctr_txt</item>
		<item name="android:textSize">@dimen/dux_textSizeSmall</item>
		<item name="android:paddingLeft">5dip</item>
		<item name="android:paddingRight">5dip</item>
	</style>

	<!-- SegmentedButton -->
	<style name="DroidUX.SegmentedButton"/>
	<style name="DroidUX.SegmentedButton.Group">
		<item name="dux_color">@color/dux_sgmtbtn_colors</item>
		<item name="dux_segmentMode">auto</item>
	</style>
	<style name="DroidUX.SegmentedButton.Button">
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
		<item name="android:padding">5dp</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="DroidUX.SegmentedButton.Button.Compound">
		<item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
		<item name="android:button">@null</item>
		<item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
		<item name="android:drawablePadding">5dp</item>
		<item name="android:shadowColor">#40ffffff</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1.0</item>
	</style>
	<style name="DroidUX.SegmentedButton.Button.Image">
		<item name="android:text">@null</item>
	</style>
</resources>
