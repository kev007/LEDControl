<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        >

        <com.droidux.widget.ColorButton
            android:id="@+id/btnBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bar"
            app:dux_color="#F6E497"/>

        <com.droidux.widget.ColorButton
            android:id="@+id/btnGrid1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Grid"
            app:dux_color="#CDE855"
            />

        <com.droidux.widget.ColorButton
            android:id="@+id/btnMenu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Menu"
            app:dux_color="#91AA9D"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textAlignment="center"
        android:text="@string/text_instruct_actionwindow_oldstyle"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        >

        <com.droidux.widget.ColorButton
            android:id="@+id/btnMenu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:dux_color="#F5F6D4"
            android:text="Menu"/>

        <com.droidux.widget.ColorButton
            android:id="@+id/btnBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bar"
            app:dux_color="#FFC0A9"
            />
    </LinearLayout>

</LinearLayout>

